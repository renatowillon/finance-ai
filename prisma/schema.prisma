generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Transaction {
  id            String                    @id @default(uuid())
  name          String
  type          TransactionType
  amount        Decimal                   @db.Decimal(10, 2)
  category      TransactionCategory
  paymentMethod TransactionPaymentMethods
  date          DateTime
  createAt      DateTime                  @default(now())
  updateAt      DateTime                  @updatedAt
}

enum TransactionType {
  DEPOSITO
  DESPESA
  INVESTIMENTO
}

enum TransactionCategory {
  SALARIO
  INVESTIMENTOS
  FREELANCER
  VENDAS
  REEMBOLSOS
  EMPRESTIMOS
  ALUGUEIS
  PREMIOS
  DOACOES
  OUTROS
  ALIMENTACAO
  TRANSPORTE
  MORADIA
  SAUDE
  EDUCACAO
  ENTRETENIMENTO
  ROUPAS
  VIAGENS
  CONTAS
  OUTRAS
}

enum TransactionPaymentMethods {
  PIX
  TRANSFERENCIA
  BOLETO
  DINHEIRO
  CARTAO_DEBITO
  CARTAO_CREDITO
}
