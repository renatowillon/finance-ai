generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Transaction {
  id            String                    @id @default(uuid())
  name          String
  type          TransactionType
  amount        Decimal                   @db.Decimal(10, 2)
  paymentMethod TransactionPaymentMethods?
  date          DateTime
  createAt      DateTime                  @default(now())
  updateAt      DateTime                  @updatedAt
  userId        Int
  author User   @relation(fields: [userId], references: [id])
  bancoId       Int @default(1)
  transactionBanco Banco @relation(fields: [bancoId], references: [id])
  baixado Boolean @default(true)
  categoriaId Int?
  categoria Categoria? @relation(fields: [categoriaId], references: [id])
  repete        Boolean                   @default(false)
  repeteQtd     Int?                      // quantidade de repetições
  repetePeriodo  Int?                      // em dias (1, 30, 60, 365)
  repeteId      String?                   // id da transação "original" (para saber de onde veio)
  @@map("transactions")

}

model User{
  id Int @id @default(autoincrement())
  name String
  email String @unique
  senha String
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
  status Boolean @default(true)
  transactions Transaction[]
  plano Planos @default(FREE)
  bancos Banco[]
  categorias Categoria[]
  investimentos Investimento[]
  cartaoCredito CartaoCredito[]
  

  @@map("users")
}

model Banco {
  id Int @id @default(autoincrement())
  nome String
  tipo TipoContas
  saldoInicial  Decimal @db.Decimal(10, 2)
  saldoAtual  Decimal @db.Decimal(10, 2)
  diaFechamento String?
  diaVencimento String?
  limite Decimal? @db.Decimal(10, 2)
  cor String
  transactionsBanco Transaction[]
  userId Int  @default(1)
  transactionsBancos User @relation(fields: [userId], references: [id])
  
  @@map("bancos")
}

model Categoria {
  id Int @id @default(autoincrement())
  nome String
  tipo Categoriatype
  userId Int?
  user User? @relation(fields: [userId], references: [id])
  transaction Transaction[]

  @@map("categorias")
}

model Investimento {
  id Int @id @default(autoincrement())
  userId Int
  nome String
  descricao String?
  meta Decimal @db.Decimal(10,2)
  valorAtual Decimal? @db.Decimal(10,2)
  cor String?
  Status StatusInvestimento @default(ATIVO)
  transacoes TransacoesInvestimento []
  user User @relation(fields: [userId], references: [id])
  @@map("investimentos")
}

model TransacoesInvestimento {
  id Int @id @default(autoincrement())
  investimentoId Int
  tipo TipoTransacaoInvestimento
  valor Decimal @db.Decimal(10,2)
  descricao String?
  investimento Investimento @relation(fields: [investimentoId], references: [id])
  @@map("transacoes_investimentos")
}

model CartaoCredito {
  id String @id @default(uuid())
  userId Int
  nome String
  limite Decimal @db.Decimal(10,2)
  diaFechamento Int
  diaVencimento Int
  cor String
  transacoes TransacaoCartaoCredito[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
  @@map("cartao_credito")
}

model TransacaoCartaoCredito {
  id String @id @default(uuid())
  descricao String
  valor Decimal @db.Decimal(10,2)
  dataCompra DateTime
  parcelada Boolean @default(false)
  parcelaAtual Int?
  totalParcelas Int?
  competencia DateTime
  pago Boolean @default(false)
  dataPagamento DateTime?

  cartaoCreditoId String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  cartaoCredito CartaoCredito @relation(fields: [cartaoCreditoId], references: [id])
  @@index([cartaoCreditoId, competencia])
  @@map("transacao_cartaocredito")
}

enum StatusInvestimento {
  ATIVO
  CONCLUIDO
  CANCELADO
}
enum TipoTransacaoInvestimento {
  DEPOSITO
  RETIRADA
}

enum TipoContas {
  POUPANCA
  CONTA_CORRENTE
  CARTAO_CREDITO
}

enum Planos {
  FREE
  PREMIUM
  DEV
}

enum Categoriatype {
  DEPOSITO
  DESPESA
}

enum TransactionType {
  DEPOSITO
  DESPESA
  INVESTIMENTO
  CARTAOCREDITO
}

enum TransactionCategory {
  SALARIO
  INVESTIMENTOS
  FREELANCER
  VENDAS
  REEMBOLSOS
  EMPRESTIMOS
  ALUGUEIS
  PREMIOS
  DOACOES
  OUTROS
  ALIMENTACAO
  TRANSPORTE
  MORADIA
  SAUDE
  EDUCACAO
  ENTRETENIMENTO
  ROUPAS
  VIAGENS
  CONTAS
}

enum TransactionPaymentMethods {
  PIX
  TRANSFERENCIA
  BOLETO
  DINHEIRO
  CARTAO_DEBITO
  CARTAO_CREDITO
}

