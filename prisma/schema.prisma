generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Transaction {
  id            String                    @id @default(uuid())
  name          String
  type          TransactionType
  amount        Decimal                   @db.Decimal(10, 2)
  // category      TransactionCategory?
  paymentMethod TransactionPaymentMethods
  date          DateTime
  createAt      DateTime                  @default(now())
  updateAt      DateTime                  @updatedAt
  userId        Int
  author User   @relation(fields: [userId], references: [id])
  bancoId       Int @default(1)
  transactionBanco Banco @relation(fields: [bancoId], references: [id])
  baixado Boolean @default(true)
  categoriaId Int?
  categoria Categoria? @relation(fields: [categoriaId], references: [id])
  @@map("transactions")

}

model User{
  id Int @id @default(autoincrement())
  name String
  email String @unique
  senha String
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
  status Boolean @default(true)
  transactions Transaction[]
  plano Planos @default(FREE)
  bancos Banco[]
  categorias Categoria[]
  

  @@map("users")
}

model Banco {
  id Int @id @default(autoincrement())
  nome String
  tipo TipoContas
  saldoInicial  Decimal @db.Decimal(10, 2)
  saldoAtual  Decimal @db.Decimal(10, 2)
  cor String
  transactionsBanco Transaction[]
  userId Int  @default(1)
  transactionsBancos User @relation(fields: [userId], references: [id])
  
  @@map("bancos")
}

model Categoria {
  id Int @id @default(autoincrement())
  nome String
  tipo Categoriatype
  userId Int?
  user User? @relation(fields: [userId], references: [id])
  transaction Transaction[]

  @@map("categorias")
}
enum TipoContas {
  POUPANCA
  CONTA_CORRENTE
  CARTAO_CREDITO
}

enum Planos {
  FREE
  PREMIUM
}

enum Categoriatype {
  DEPOSITO
  DESPESA
}

enum TransactionType {
  DEPOSITO
  DESPESA
  INVESTIMENTO
}

enum TransactionCategory {
  SALARIO
  INVESTIMENTOS
  FREELANCER
  VENDAS
  REEMBOLSOS
  EMPRESTIMOS
  ALUGUEIS
  PREMIOS
  DOACOES
  OUTROS
  ALIMENTACAO
  TRANSPORTE
  MORADIA
  SAUDE
  EDUCACAO
  ENTRETENIMENTO
  ROUPAS
  VIAGENS
  CONTAS
}

enum TransactionPaymentMethods {
  PIX
  TRANSFERENCIA
  BOLETO
  DINHEIRO
  CARTAO_DEBITO
  CARTAO_CREDITO
}

